<%include partials/header.ejs%>

<h1>Todo List</h1>

<form action="/" method="POST">
	<input type="text" name="content">
	<input type="submit">
</form>

<div>
	<ul>
		<%lists.forEach(function(list){%>
			<li> <%=list.do%> </li>
			<form action="/<%=list._id%>?_method=DELETE" method="POST">
				<input type="submit" value="&Cross;">
			</form>
		<%});%>
	</ul>
</div>

